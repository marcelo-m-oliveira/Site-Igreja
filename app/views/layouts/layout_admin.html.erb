<!DOCTYPE html>
<html>
  <head>
    <title>Igreja Assembleia de Deus - Ministerio de Madureira - Feira de Santana - BA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'layout_admin' %>
    <%= favicon_link_tag asset_path('logo') %>
  </head>

  <body>
    <div id="wrapper">
      <!-- Navigation -->
      <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Menu</span>
            <i class="fa fa-navicon"></i>
          </button>
          <%= link_to 'ADEMMFS - Administrador', admins_backoffice_welcome_index_path, class:'navbar-brand' %>
        </div>
        <!-- /.navbar-header -->
        <ul class="nav navbar-top-links navbar-right">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-user fa-fw"></i> <%= current_user.name %> <i class="fa fa-caret-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out fa-fw"></i> Sair
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
        <div class="navbar-default sidebar" role="navigation">
          <div class="sidebar-nav navbar-collapse">
            <ul class="nav" id="side-menu">
              <li>
                <%= link_to admins_backoffice_welcome_index_path, class:"active" do %>
                  <i class="fa fa-home"></i> Inicio
                <% end %>
              </li>
              <li class="active">
                <a href="#"><i class="fa fa-users"></i> Membros<span class="fa arrow"></span></a>
                <ul class="nav nav-second-level collapse in" aria-expanded="true">
                  <li>
                    <%= link_to 'Listar Membros', admins_backoffice_members_path %>
                  </li>
                  <li>
                    <%= link_to 'Cadastrar novo Membro', new_admins_backoffice_member_path %>
                  </li>
                </ul>
              </li>
              <li>
                <%= link_to site_welcome_index_path do %>
                  <i class="fa fa-arrow-left"></i> Voltar para o site
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <div id="page-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
    

  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'layout_admin' %>

  <% if notice %>
    <%= javascript_tag do %>
      $.bootstrapGrowl('<%= notice %>', {
      type: 'success',
      align: 'right',
      allow_dismiss: true,
      stackup_spacing: 10
    });
    <% end %>
  <% end %>

  </body>
</html>
